<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lightbackgroundcolor"
    android:fillViewport="true"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/internetbar"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/internetbarcolor"
            android:gravity="center"
            android:text="No internet Connection"
            android:textColor="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/progressBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightbackgroundcolor"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Loading..."
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/classInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical" >



            <LinearLayout
                android:id="@+id/classInfoInnerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/profile_left_margin"
                android:paddingRight="@dimen/profile_right_margin" >

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:text="TEACHER PROFILE"
                    android:textColor="@color/profile_title"
                    android:textSize="@dimen/profil_bar_font_size"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/profile_head_bar"
                    android:text=""
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/propic" />

                    <LinearLayout
                        android:id="@+id/detailsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="8dp" >

                        <TextView
                            android:id="@+id/teacherName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Knit Team"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/profile_heading"
                            android:textSize="16sp" />

                        <!--<TextView
                            android:id="@+id/schoolName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:ems="17"

                            android:text="Knit"
                            android:singleLine="true"
                            android:textColor="@color/profile_edit"
                            android:textSize="11sp" />-->
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/classDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:text="CLASS DETAILS"
                    android:textColor="@color/profile_title"
                    android:textSize="@dimen/profil_bar_font_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/profile_head_bar"
                    android:text="" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/className"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:text="MATH 2C"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:ems="12"
                        android:textColor="@color/profile_heading"
                        android:textSize="15sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp" />

                    <TextView
                        android:id="@+id/classCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KNIT123"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:padding="6dp"
                        android:background="@drawable/button_color_boundry"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />

                    <TextView
                        android:id="@+id/subCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tap to copy code"
                        android:textSize="8sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/txtgrey"
                        android:layout_below="@+id/classCode"
                        android:layout_alignRight="@+id/classCode"
                        android:layout_alignEnd="@+id/classCode" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/seperator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/profile_tail_bar"
                    android:paddingBottom="12dp"
                    android:text="" />

                <LinearLayout
                    android:id="@+id/assignedNameContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_left_margin"
                            android:text="Child Name : "
                            android:textColor="@color/profile_heading"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/assignedName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_left_margin"
                            android:text="Knit"
                            android:singleLine="true"
                            android:textColor="@color/profile_heading"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:layout_marginTop="3dp"
                        android:text="Edit"
                        android:textColor="@color/profile_edit"
                        android:textSize="12sp" />

                </LinearLayout>



                <LinearLayout
                android:id="@+id/whatsAppSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:text="SHARE CLASS CODE"
                        android:textColor="@color/profile_title"
                        android:textSize="@dimen/profil_bar_font_size" />

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/profile_head_bar"
                    android:text="" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Share this class code with other parents of same class on WhatsApp."
                    android:textSize="10sp"
                    />

                <RelativeLayout
                    android:id="@+id/whatsappLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="4dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/whatsAppIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/whatsapp"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="via WhatsApp"
                        android:textSize="14sp"
                        android:layout_marginLeft="8dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/profile_heading"
                        android:layout_toRightOf="@+id/whatsAppIcon"
                        android:layout_toEndOf="@+id/whatsAppIcon" />
                </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/demo_layout"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/profile_tail_bar"
                    android:text="" />

                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/demo_class_content"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />
                    </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>