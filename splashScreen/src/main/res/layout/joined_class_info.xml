<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/internetbar"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/internetbarcolor"
            android:gravity="center"
            android:text="No internet Connection"
            android:textColor="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/classInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical" >



            <LinearLayout
            android:id="@+id/classInfoInnerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/profile_left_margin"
            android:paddingRight="@dimen/profile_right_margin" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/propic" />

                <LinearLayout
                    android:id="@+id/detailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp" >

                    <TextView
                        android:id="@+id/className"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="MATHS 4B"
                        android:textColor="@color/profile_heading"
                        android:textSize="@dimen/profil_heading_font_size"
                        android:paddingBottom="10dp" />

                    <TextView
                        android:id="@+id/teacherName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="5dp"
                        android:text="Mr Raj Darbari"
                         android:textColor="@color/profile_heading"
                        android:textSize="@dimen/profil_heading_font_size"
                        android:paddingTop="10dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/profile_head_bar"
                android:text="" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/classCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KNI1234"
                        android:gravity="left"
                        android:padding="12dp"
                        android:background="@drawable/app_color_box"
                        android:textColor="@color/buttoncolor"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(tap to copy)"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:textStyle="italic"
                        android:textSize="11sp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/whatsAppIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/ic_action_emo_cool"
                    android:padding="10dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/profile_head_bar"
                android:paddingBottom="10dp"
                android:text="" />


            <TextView
                android:id="@+id/schoolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_left_margin"
                android:text="DAV Public School"
                android:textColor="@color/profile_heading"
                android:textSize="@dimen/profil_heading_font_size"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/profile_head_bar"
                android:paddingBottom="10dp"
                android:text="" />

             <LinearLayout 
                android:id="@+id/assignedNameContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:orientation="vertical"
                >
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10dp"
                     android:orientation="horizontal" >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="@dimen/text_left_margin"
                     android:text="Assigned to : "
                     android:textColor="@color/profile_heading"
                     android:textSize="@dimen/profil_heading_font_size" />
             <TextView
                android:id="@+id/assignedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_left_margin"
                android:text="Chotu"
                android:textColor="@color/profile_heading"
                android:textSize="@dimen/profil_heading_font_size" />
                     </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_left_margin"
                android:layout_marginTop="3dp"
                android:text="Edit"
                android:textColor="@color/profile_edit"
                android:textSize="@dimen/profil_edit_font_size" />
            
            </LinearLayout>


        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>