<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greyoutline"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="top|left"
                android:layout_marginRight="16dp"
                android:background="@drawable/maleteacher"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image"
                android:layout_gravity="top"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@+id/image"
                android:ellipsize="end"
                android:maxEms="10"
                android:textColor="#363636"
                android:singleLine="true"
                android:text="ENGLISH"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/startTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/groupName"
                android:layout_below="@+id/groupName"
                android:layout_marginTop="0dp"
                android:text="1min ago"
                android:textColor="#939597"
                android:textSize="12sp" />
            <!-- android:textColor="@color/darkergrey"-->


            <TextView
                android:id="@+id/by12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/groupName"
                android:layout_toRightOf="@+id/groupName"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxEms="10"
                android:paddingBottom="2dp"
                android:singleLine="true"
                android:text=" by "
                android:textColor="#939597"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/groupName"
                android:layout_toRightOf="@+id/by12"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxEms="10"
                android:paddingBottom="2dp"
                android:singleLine="true"
                android:text="Ms Seema"
                android:textColor="@color/darkergrey"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/copyMessage"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="12dp"
                android:paddingBottom="4dp"
                android:paddingTop="2dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_action_expand" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/msgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Make sure that your child starts reading poems everyday. This will help greatly in building personality and improving language."
            android:textColor="@color/txtgreyDark"
            android:textSize="15sp" />

        <FrameLayout
            android:id="@+id/imagefrmlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/image_shadow">

                <ImageView
                    android:id="@+id/imgmsgcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/msgprogressbar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/faildownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Image Download failed!"
                android:textColor="@color/darkergrey"
                android:textSize="12sp"
                android:visibility="gone" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/likeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/round_corner_grey_color"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/likeIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_action_like"></ImageView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/confuseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_grey_color"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingRight="6dp">

                <TextView
                    android:id="@+id/confusion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/confusionIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_action_help"></ImageView>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1" />

</LinearLayout>