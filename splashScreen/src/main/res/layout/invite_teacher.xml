<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/inviteTeacherLayout">
    <TextView
        android:id="@+id/internetbar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/internetbarcolor"
        android:gravity="center"
        android:text="No internet Connection"
        android:textColor="@color/white"
        android:visibility="gone" />
    <LinearLayout
        android:id="@+id/detailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:text="Invite Teacher"
            android:textColor="@color/txtgrey"
            android:textSize="22sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:text="Name of Teacher"
            android:textColor="@color/holo_blue_dark"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:hint="Name of Teacher"
            android:ems="10"
            android:id="@+id/teacherEditText"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:text="Name of School"
            android:textColor="@color/holo_blue_dark"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:hint="Name of School"
            android:ems="10"
            android:id="@+id/schoolEditText"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:text="Your Child's Name"
            android:textColor="@color/holo_blue_dark"
            android:textSize="18sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:hint="Child Name"
            android:ems="10"
            android:id="@+id/childEditText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:text="Teacher's Phone"
            android:textColor="@color/holo_blue_dark"
            android:textSize="18sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:hint="Phone"
            android:maxLength="10"
            android:ems="10"
            android:id="@+id/phoneEditText" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:text="OR"
            android:textColor="@color/holo_blue_dark"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left"
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:text="Teacher's Email"
            android:textColor="@color/holo_blue_dark"
            android:textSize="18sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:hint="Email"
            android:ems="10"
            android:id="@+id/emailEditText" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/round_corner_button_color"
            android:paddingBottom="@dimen/signupTopPaddingButton"
            android:paddingLeft="@dimen/signupLeftPaddingButton"
            android:paddingRight="@dimen/signupLeftPaddingButton"
            android:paddingTop="@dimen/signupTopPaddingButton"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/congratsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:background="@drawable/logo12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/buttoncolor"
            android:gravity="center"
            android:layout_weight="0.73">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have successfully invited the teacher. We will request the teacher to join the platform asap!"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/progressBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Submitting..."
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>