<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbackgroundcolor"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightbackgroundcolor"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/signupLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/logupheadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:paddingBottom="@dimen/signupPaddingTop"
                android:paddingLeft="16dp"
                android:paddingRight="1dp"
                android:paddingTop="@dimen/signupPaddingTop"
                android:text="Sign Up"
                android:textColor="@color/txtgrey"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/emailinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Email-id"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/signupPaddingTop"
                android:paddingLeft="16dp"
                android:paddingRight="1dp"
                android:paddingTop="@dimen/signupPaddingTop"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/phoneid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:hint="10 Digits Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:paddingBottom="@dimen/signupPaddingTop"
                android:paddingLeft="16dp"
                android:paddingRight="1dp"
                android:paddingTop="@dimen/signupPaddingTop"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/create_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/round_corner_button_color"
                android:paddingBottom="@dimen/signupTopPaddingButton"
                android:paddingLeft="@dimen/signupLeftPaddingButton"
                android:paddingRight="@dimen/signupLeftPaddingButton"
                android:paddingTop="@dimen/signupTopPaddingButton"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>