<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lightbackgroundcolor"
    android:fillViewport="true"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/internetbar"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/internetbarcolor"
            android:gravity="center"
            android:text="No internet Connection"
            android:textColor="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/classInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical" >



            <LinearLayout
                android:id="@+id/classInfoInnerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/profile_left_margin"
                android:paddingRight="@dimen/profile_right_margin" >

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:text="TEACHER PROFILE"
                    android:textColor="@color/profile_title"
                    android:textSize="@dimen/profil_bar_font_size"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/profile_head_bar"
                    android:text=""
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/propic" />

                    <LinearLayout
                        android:id="@+id/detailsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="8dp" >

                        <TextView
                            android:id="@+id/teacher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Knit Team"
                            android:textColor="@color/profile_heading"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/schoolName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:ems="13"
                            android:text="Knit"
                            android:singleLine="true"
                            android:textColor="@color/profile_edit"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/classDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:text="CLASS DETAILS"
                    android:textColor="@color/profile_title"
                    android:textSize="@dimen/profil_bar_font_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/profile_head_bar"
                    android:text="" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/classname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:text="MATH 2C"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:ems="12"
                        android:textColor="@color/profile_heading"
                        android:textSize="15sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp" />

                    <TextView
                        android:id="@+id/classcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KNIT123"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:padding="6dp"
                        android:background="@drawable/button_color_boundry"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        />

                    <TextView
                        android:id="@+id/subCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tap to copy code"
                        android:textSize="8sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/txtgrey"
                        android:layout_below="@+id/classcode"
                        android:layout_alignRight="@+id/classcode"
                        android:layout_alignEnd="@+id/classcode" />


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/buttoncolor">

                    <ImageButton
                        android:id="@+id/gallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/buttoncolor"
                        android:src="@drawable/plus_white" />

                    <TextView
                        android:id="@+id/lettercount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="4dp"
                        android:text="Join Class"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/whatsappLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/ignore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't show it again"
                        android:textSize="12sp"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:layout_marginBottom="64dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/buttoncolor"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>