<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false" >

    <ImageView
        android:id="@+id/popup_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/popup_text"
        android:layout_marginBottom="-10.0dip"
        android:paddingLeft="0dp"
        android:paddingRight="20dp"
        android:src="@drawable/popup_up"
        android:visibility="visible" />

    <TextView
        android:id="@+id/popup_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_up"
        android:background="@drawable/round_corner_button_color_circle"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="Textslate is a messaging app"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/popup_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/popup_text"
        android:layout_below="@+id/popup_text"
        android:layout_marginTop="-10.0dip"
        android:paddingLeft="0dp"
        android:paddingRight="20dp"
        android:src="@drawable/popup_down"
        android:visibility="gone" />

</RelativeLayout>