<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/invite_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invite Parents from -"
        android:textColor="@color/profile_title"
        android:textSize="16sp"
        />

    <RelativeLayout
        android:id="@+id/phonebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_below="@+id/invite_heading"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:background="@drawable/phonebook3"
            android:id="@+id/imageView2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Book"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_action_next_item"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:id="@+id/imageView3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/whatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:layout_below="@+id/phonebook"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:background="@drawable/whatsapp_icon"
            android:id="@+id/imageView21"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whatsapp"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView21"
            android:layout_toEndOf="@+id/imageView21" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@drawable/ic_action_next_item"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:layout_below="@+id/whatsapp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:background="@drawable/gmail"
            android:id="@+id/imageView22"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView22"
            android:layout_toEndOf="@+id/imageView22" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@drawable/ic_action_next_item"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:text="Receive Instructions via Email"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/buttoncolor"
        />


    <LinearLayout
        android:id="@+id/seeHow"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/howToJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="See how Parent/Students join via -"
            android:textSize="15sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SMS"
                android:background="#AAAAAA"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginRight="2dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/app"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="APP"
                android:background="#AAAAAA"
                android:padding="8dp"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

</ScrollView>