<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/signup_margin"
    android:background="@color/lightbackgroundcolor"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We are waiting to autodetect verification code sent to your phone number."
        android:textSize="14sp"
        android:layout_marginLeft="4dp"
        android:gravity="left"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:id="@+id/timerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4:23"
        android:textSize="16sp"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter code below and click Verify button"
        android:textSize="14sp"
        android:layout_marginLeft="4dp"
        android:gravity="left"
        android:layout_marginTop="8dp"
        />

    <EditText
        android:id="@+id/verificationCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Class-code"
        android:background="@drawable/apptheme_edit_text_holo_light"
        android:paddingLeft="16dp"
        android:paddingRight="1dp"
        android:inputType="number"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="229dp"
        android:layout_height="161dp"
        android:layout_gravity="center_horizontal">
        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            android:id="@+id/progressHeader"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            style="@style/GNowProgressBar"
            android:visibility="visible"
            android:background="@color/white"
            android:indeterminate="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="122dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ERROR OCCURED !"
        android:textColor="@color/holo_red_dark"
        android:textSize="14sp"
        android:layout_marginLeft="4dp"
        android:gravity="left"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/resendAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend Verification Code"
        android:textColor="@color/buttoncolor"
        android:textSize="14sp"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        />


</LinearLayout>