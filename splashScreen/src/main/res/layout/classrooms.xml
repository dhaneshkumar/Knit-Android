<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbackgroundcolor"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/buttonContainer"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here you find all your created and joined classrooms. If you want to send a new message, just on created classrooms  and start sending "
                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/lightbackgroundcolor"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Okay, got it!"
                android:layout_gravity="right"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/white"
                android:background="@drawable/round_corner_button_color"
                />

            </LinearLayout>

        <TextView
            android:id="@+id/createdClassTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created Classes"
            android:textColor="@color/profile_title"
            android:textSize="16sp"
            />

        <library.ExpandableListView
            android:id="@+id/createdclasseslistview"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:divider="@color/lightbackgroundcolor"
            android:dividerHeight="1dp"
            />

        <TextView
            android:id="@+id/joinedClassTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Joined Classes"
            android:layout_marginTop="8dp"
            android:textColor="@color/profile_title"
            android:textSize="16sp"
            />

        <library.ExpandableListView
            android:id="@+id/joinedclasseslistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:divider="@color/lightbackgroundcolor"
            android:dividerHeight="1dp"
            />


    </LinearLayout>
    </ScrollView>



    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CBCBCB"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/createClassTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Create Class"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textColor="@color/buttoncolor"
            android:paddingBottom="10dp"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_height="wrap_content"
            android:background="#CBCBCB"

            />

        <TextView
            android:id="@+id/joinClassTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Join Class"
            android:paddingTop="10dp"
            android:textColor="@color/buttoncolor"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </LinearLayout>


</RelativeLayout>