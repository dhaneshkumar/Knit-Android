<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        android:orientation="vertical">



    <TextView
            android:id="@+id/internetbar"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/internetbarcolor"
            android:gravity="center"
            android:text="No internet Connection"
            android:textColor="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/progressLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logging out ..."
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/profileEditLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/profile_left_margin"
                android:paddingRight="@dimen/profile_right_margin">

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:text="PROFILE"
                    android:textColor="@color/profile_title"
                    android:textSize="@dimen/profil_bar_font_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/profile_head_bar"
                    android:text="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profileimg"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:background="@drawable/dp_common" />

                    <LinearLayout
                        android:id="@+id/editName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Username"
                            android:textColor="@color/profile_heading"
                            android:textSize="@dimen/profil_heading_font_size" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="5dp"
                            android:text="Edit"
                            android:textColor="@color/profile_edit"
                            android:textSize="@dimen/profil_edit_font_size" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:layout_marginTop="5dp"
                    android:text="ACCOUNT"
                    android:textColor="@color/profile_title"
                    android:textSize="@dimen/profil_bar_font_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/profile_head_bar"
                    android:text="" />


                <LinearLayout
                    android:id="@+id/editPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="17dp"
                    android:paddingTop="17dp">

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:text="Username"
                        android:singleLine="true"
                        android:textColor="@color/profile_heading"
                        android:textSize="@dimen/profil_heading_font_size" />

                   <!-- <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_left_margin"
                        android:layout_marginTop="3dp"
                        android:text="Edit"
                        android:textColor="@color/profile_edit"
                        android:textSize="@dimen/profil_edit_font_size" />-->
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/profile_tail_bar"
                    android:text=""
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/profile_tail_bar"
                    android:text="" />

                <TextView
                    android:id="@+id/signOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="17dp"
                    android:paddingTop="17dp"
                    android:text="Sign Out"
                    android:textColor="@color/profile_heading"
                    android:textSize="@dimen/profil_heading_font_size" />


                <TextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:text="ABOUT THE APP"
                    android:textColor="@color/profile_title"
                    android:textSize="@dimen/profil_bar_font_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/profile_head_bar"
                    android:text="" />


                <TextView
                    android:id="@+id/faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:paddingBottom="17dp"
                    android:paddingTop="17dp"
                    android:text="FAQs"
                    android:textColor="@color/profile_heading"
                    android:textSize="@dimen/profil_heading_font_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/profile_tail_bar"
                    android:text="" />


                <TextView
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_left_margin"
                    android:paddingBottom="17dp"
                    android:paddingTop="17dp"
                    android:text="Feedback"
                    android:textColor="@color/profile_heading"
                    android:textSize="@dimen/profil_heading_font_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/profile_tail_bar"
                    android:text="" />

                <TextView
                    android:id="@+id/rateOurApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="17dp"
                    android:paddingTop="17dp"
                    android:text="Rate Our Application"
                    android:textColor="@color/profile_heading"
                    android:textSize="@dimen/profil_heading_font_size" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>