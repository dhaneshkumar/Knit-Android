<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbackgroundcolor"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightbackgroundcolor"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/internetbar"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/internetbarcolor"
            android:gravity="center"
            android:text="No internet Connection"
            android:textColor="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/progressLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creating new account..."
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signupLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/logupheadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:paddingBottom="@dimen/signupPaddingTop"
                android:paddingLeft="16dp"
                android:paddingRight="1dp"
                android:paddingTop="@dimen/signupPaddingTop"
                android:text="Sign Up"
                android:textColor="@color/txtgrey"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/passwordinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:hint="Password"
                android:inputType="textVisiblePassword"
                android:paddingBottom="@dimen/signupPaddingTop"
                android:paddingLeft="16dp"
                android:paddingRight="1dp"
                android:paddingTop="@dimen/signupPaddingTop"
                android:password="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/repasswordinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:hint="Confirm Password"
                android:inputType="textVisiblePassword"
                android:paddingBottom="@dimen/signupPaddingTop"
                android:paddingLeft="16dp"
                android:paddingRight="1dp"
                android:paddingTop="@dimen/signupPaddingTop"
                android:password="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/create_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/round_corner_button_color"
                android:paddingBottom="@dimen/signupTopPaddingButton"
                android:paddingLeft="@dimen/signupLeftPaddingButton"
                android:paddingRight="@dimen/signupLeftPaddingButton"
                android:paddingTop="@dimen/signupTopPaddingButton"
                android:text="Create"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>