<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbackgroundcolor"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/logupheadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/signupPaddingTop"
            android:paddingLeft="16dp"
            android:paddingRight="1dp"
            android:paddingTop="@dimen/signupPaddingTop"
            android:text="Sign Up"
            android:textColor="@color/txtgrey"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/mr_spinner"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:entries="@array/mrchoice"
                android:prompt="@string/prompt_choice"
                android:textSize="16sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightbackgroundcolor" />

            <EditText
                android:id="@+id/displaynameid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="Display Name"
                android:inputType="textPersonName"
                android:paddingBottom="@dimen/signupPaddingTop"
                android:paddingLeft="16dp"
                android:paddingRight="3dp"
                android:paddingTop="@dimen/signupPaddingTop"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <AutoCompleteTextView
            android:id="@+id/schoolName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:hint="School Name"
            android:paddingBottom="@dimen/signupPaddingTop"
            android:paddingLeft="16dp"
            android:completionThreshold="1"
            android:paddingRight="3dp"
            android:paddingTop="@dimen/signupPaddingTop"
            android:textColor="@color/black"
            android:textSize="16sp" >

        </AutoCompleteTextView>

        <Button
            android:id="@+id/join_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="@dimen/signupTopPaddingButton"
            android:paddingBottom="@dimen/signupTopPaddingButton"
            android:paddingLeft="@dimen/signupLeftPaddingButton"
            android:paddingRight="@dimen/signupLeftPaddingButton"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/round_corner_button_color"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>