<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbackgroundcolor"
    android:gravity="center_horizontal"
    android:id="@+id/msgCntLayout"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/inbox_uphead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="32dp"
        android:layout_gravity="right"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/inbox_instruction"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="#E5E5E5"
        android:paddingBottom="1dp"
        android:visibility="gone"
        android:paddingLeft="1dp"
        android:layout_marginTop="-4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inbox_instructions"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/inbox_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Okay, got it."
                android:layout_gravity="right"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="14sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                android:background="@color/buttoncolor"
                />



        </LinearLayout>

    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ptr_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/msg_list"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/inemptymsg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-50dp"
        android:layout_weight="1"
        android:gravity="top|center_horizontal"
        android:visibility="visible"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="To start receiving messages join a classroom"
            android:textColor="@color/darkergrey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/inemptylink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Join Classroom"
            android:textColor="@color/buttoncolor"
            android:textSize="18sp"
            android:textStyle="italic|bold" />


    </LinearLayout>

</LinearLayout>